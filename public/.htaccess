# Ativar o mecanismo de reescrita
RewriteEngine On

# Definir index.php como arquivo padrão
DirectoryIndex index.php

# Permitir acesso direto a arquivos estáticos (CSS, JS, imagens, PDFs)
RewriteCond %{REQUEST_FILENAME} -f
RewriteCond %{REQUEST_URI} \.(css|js|png|jpg|jpeg|gif|pdf|ico)$ [NC]
RewriteRule ^(.*)$ - [L]

# Direcionar todas as outras requisições para index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [QSA,L]